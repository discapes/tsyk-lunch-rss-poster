		"checkJs": true,
		"module": "NodeNext",
		"noEmit": true,
		"target": "ESNext",
		"strict": true,
		"noImplicitAny": false,
		"lib": ["ESNext"],
		"moduleResolution": "NodeNext",
		"types": ["node"]
